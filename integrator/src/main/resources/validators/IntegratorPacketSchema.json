{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "IntegratorPacket",
    "type": "object",
    "properties": {
        "method": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "type": "string",
                    "enum": [
                        "PING",
                        "DELIVER",
                        "REGISTER_SERVICE",
                        "IS_AVAILABLE",
                        "GET_SERVICE_LIST",
                        "GET_SUPPORTED_ACTIONS",
                        "ADD_ACTION",
                        "GET_SERVICE_INFO",
                        "REGISTER_AUTO_DETECTION",
                        "GET_ACTIONS_FOR_DELIVERY",
                        "GET_SERVICES_SUPPORTING_ACTION_TYPE",
                        "FETCH_UPDATES",
                        "REMOVE_SERVICE",
                        "EDIT_SERVICE",
                        "EDIT_ACTION"
                    ]
                }
            ]

        },
        "data": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "#/definitions/actionMethod"
                },
                {
                    "type": "string"
                },
                {
                    "type": "object",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/deliveryDTO"
                        },
                        {
                            "$ref": "#/definitions/targetRegistrationDTO"
                        },
                        {
                            "$ref": "#/definitions/serviceDD"
                        },
                        {
                            "$ref": "#/definitions/addActionDTO"
                        },
                        {
                            "$ref": "#/definitions/autoDetectionRegistrationDTO"
                        },
                        {
                            "$ref": "#/definitions/editServiceDTO"
                        } ,
                        {
                            "$ref": "#/definitions/editActionDTO"
                        }
                    ]
                }
            ]

        },
        "responseHandlerDescriptor": {
            "oneOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "#/definitions/destinationDescriptor"
                }
            ]

        }
    },
    "definitions": {
        "deliveryDTO": {
            "type": "object",
            "required": ["requestData"],
            "additionalProperties": false,
            "properties": {
                "responseHandlerDescriptor": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "$ref": "#/definitions/destinationDescriptor"
                        }
                    ]
                },
                "destinations": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "array",
                            "items": [
                                {
                                    "type": "string"
                                }
                            ]
                        }
                    ]
                },
                "action": {
                    "oneOf": [
                        {
                            "type": "null"
                        },
                        {
                            "type": "string"
                        }
                    ]

                },
                "requestData": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["deliveryPacketType", "data"],
                    "properties": {
                        "deliveryPacketType": {
                            "type": "string",
                            "enum": [ "INCIDENT", "DICTIONARY", "LOCATION", "RESULT", "UNDEFINED" ]
                        },
                        "data": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "targetRegistrationDTO": {
            "type": "object",
            "required": ["serviceName", "endpoint", "deliverySettings"],
            "additionalProperties": false,
            "properties": {
                "serviceName": {
                    "type": "string"
                },
                "endpoint": {
                    "type": "object",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/httpDesc"
                        },
                        {
                            "$ref": "#/definitions/jmsDesc"
                        }
                    ]
                },
                "deliverySettings": {
                    "$ref": "#/definitions/deliverySettings"
                },
                "actionRegistrations": {
                    "type": "array",
                    "items": [
                        {
                            "$ref": "#/definitions/actionRegDTO"
                        }
                    ]
                }
            }
        },
        "actionRegDTO": {
            "type": "object",
            "required": ["forceRegister", "action"],
            "additionalProperties": false,
            "properties": {
                "forceRegister": {
                    "type": "boolean"
                },
                "action": {
                    "type": "object",
                    "required": ["actionName", "actionDescriptor"],
                    "additionalProperties": false,
                    "properties": {
                        "actionName": {
                            "type": "string"
                        },
                        "actionDescriptor": {
                            "$ref": "#/definitions/actionDesc"
                        }
                    }
                }
            }
        },
        "addActionDTO": {
            "type": "object",
            "required": [ "service", "actionRegistration" ],
            "additionalProperties": false,
            "properties": {
                "serviceName": {
                    "type": "string"
                },
                "actionRegistration": {
                    "$ref": "#/definitions/actionRegDTO"
                }
            }
        },
        "autoDetectionRegistrationDTO": {
            "type": "object",
            "required": [ "deliveryPacketType", "referenceObject", "destinationDescriptors" ],
            "additionalProperties": false,
            "properties": {
                "deliveryPacketType": {
                    "type": "string",
                    "enum": [ "INCIDENT", "DICTIONARY", "LOCATION", "RESULT", "UNDEFINED" ]
                },
                "referenceObject": {
                    "type": "object"
                },
                "destinationDescriptors": {
                    "type": "array",
                    "items": [
                        {
                            "required": [ "destinationDescriptor", "forceRegister"],
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "destinationDescriptor": {
                                    "$ref": "#/definitions/destinationDescriptor"
                                },
                                "forceRegister": {
                                    "type": "boolean"
                                }
                            }
                        }
                    ]
                }
            }
        },
        "editServiceDTO": {
            "type": "object",
            "required": [ "serviceName" ],
            "additionalProperties": false,
            "properties": {
                "serviceName": {
                    "type": "string"
                },
                "newServiceName": {
                    "type": "string"
                },
                "endpointDescriptor": {
                    "type": "object",
                    "oneOf": [
                        {
                            "$ref": "#/definitions/httpDesc"
                        },
                        {
                            "$ref": "#/definitions/jmsDesc"
                        }
                    ]
                },
                "deliverySettings": {
                    "$ref": "#/definitions/deliverySettings"
                }
            }
        },
        "editActionDTO": {
            "type": "object",
            "required": [ "actionName", "serviceName","forceChanges" ],
            "additionalProperties": false,
            "properties": {
                "serviceName": {
                    "type": "string"
                },
                "newActionName": {
                    "type": "string"
                },
                "forceChanges": {
                    "type": "boolean"
                },
                "actionName": {
                    "type": "string"
                },
                "actionDescriptor": {
                    "$ref": "#/definitions/actionDesc"
                }
            }
        },
        "deliverySettings": {
            "required": ["retryDelay", "retryNumber"],
            "additionalProperties": false,
            "type": "object",
            "properties": {
                "retryNumber": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                },
                "retryDelay": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                }
            }
        },
        "serviceDD": {
            "required": [ "descriptorType", "service", "action", "endpointType" ],
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "descriptorType": {
                    "type": "string",
                    "enum": [ "SERVICE" ]
                },
                "service": {
                    "type": "string"
                },
                "action": {
                    "type": "string"
                },
                "endpointType": {
                    "type": "string",
                    "enum": [ "HTTP", "JMS" ]
                }
            }
        },
        "destinationDescriptor": {
            "type": "object",
            "oneOf": [
                {
                    "$ref": "#/definitions/serviceDD"
                },
                {
                    "required": [ "descriptorType", "endpoint", "actionDescriptor"],
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "descriptorType": {
                            "type": "string",
                            "enum": [ "RAW" ]
                        },
                        "endpoint": {
                            "type": "object",
                            "oneOf": [
                                {
                                    "$ref": "#/definitions/httpDesc"
                                },
                                {
                                    "$ref": "#/definitions/jmsDesc"
                                }
                            ]
                        },
                        "actionDescriptor": {
                            "$ref": "#/definitions/actionDesc"
                        }
                    }
                }
            ]
        },
        "actionMethod":{
            "type": "string",
            "enum": [
                "HANDLE_DELIVERY",
                "HANDLE_RESPONSE_FROM_TARGET",
                "HANDLE_DELIVERY_METHOD_RESPONSE",
                "HANDLE_SERVER_REGISTRATION",
                "HANDLE_SERVICE_IS_AVAILABLE",
                "HANDLE_GET_SERVER_LIST",
                "HANDLE_GET_SUPPORTED_ACTIONS",
                "HANDLE_ADD_ACTION",
                "HANDLE_GET_SERVICE_INFO",
                "HANDLE_PING",
                "HANDLE_AUTO_DETECTION_REGISTRATION",
                "HANDLE_GET_ACTIONS_FOR_DELIVERY",
                "HANDLE_GET_SERVICES_SUPPORTING_ACTION_TYPE",
                "HANDLE_FETCH_UPDATES",
                "HANDLE_REMOVE_SERVICE",
                "HANDLE_EDIT_SERVICE",
                "HANDLE_EDIT_ACTION"
            ]
        } ,
        "actionDesc": {
            "type": "object",
            "oneOf": [
                {
                    "type": "object",
                    "required": ["path", "actionMethod", "endpointType"],
                    "additionalProperties": false,
                    "properties": {
                        "path": {
                            "type": "string"
                        },
                        "endpointType": {
                            "type": "string",
                            "enum": [ "HTTP" ]
                        },
                        "actionMethod": {
                            "$ref": "#/definitions/actionMethod"
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["queueName", "actionMethod", "endpointType"],
                    "additionalProperties": false,
                    "properties": {
                        "endpointType": {
                            "type": "string",
                            "enum": [ "JMS" ]
                        },
                        "username": {
                            "type": "string"
                        },
                        "password": {
                            "type": "string"
                        },
                        "queueName": {
                            "type": "string"
                        },
                        "actionMethod": {
                            "$ref": "#/definitions/actionMethod"
                        }
                    }
                }
            ]
        },
        "httpDesc": {
            "type": "object",
            "required": ["host", "port", "endpointType"],
            "additionalProperties": false,
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                },"endpointType": {
                    "type": "string",
                    "enum": [ "HTTP" ]
                }
            }
        },
        "jmsDesc": {
            "type": "object",
            "additionalProperties": false,
            "required": ["connectionFactory", "jndiProperties","endpointType"],
            "properties": {
                "connectionFactory": {
                    "type": "string"
                },
                "jndiProperties": {
                    "type": "object",
                    "default": {}
                } ,
                "endpointType": {
                    "type": "string",
                    "enum": [ "JMS" ]
                }
            }
        }
    }
}